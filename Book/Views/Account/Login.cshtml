@model Book.Models.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["LoginTitle"]</h2>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Name">@Localizer["Name"]</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password">@Localizer["Password"]</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit">@Localizer["LoginButton"]</button>
</form>

<a asp-action="Registration">@Localizer["RegisterLink"]</a> |
<a asp-action="Guest">@Localizer["GuestLogin"]</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

