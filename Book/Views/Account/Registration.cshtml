@model Book.Models.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["RegisterTitle"]</h2>

<form asp-action="Registration" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Name">@Localizer["Name"]</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password">@Localizer["Password"]</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">@Localizer["RegisterButton"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
